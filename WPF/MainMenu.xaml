<UserControl x:Class="WPF.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Grid Height="Auto" HorizontalAlignment="Center" Name="grid1" VerticalAlignment="Top" Width="Auto" Margin="55"> 
            <Grid  Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource MenuButton}"  Click="VsComputerClicked">
                    <TextBlock Style="{StaticResource MenuText}">Play Solo</TextBlock>
                </Button>
                <Button Grid.Column="1" Style="{StaticResource MenuButton}" Click="PvPClicked">
                    <TextBlock Style="{StaticResource MenuText}">Play With Friends</TextBlock>
                </Button>
                <Button Grid.Column="2" Style="{StaticResource MenuButton}" Click="OnPassAndPlay">
                    <TextBlock Style="{StaticResource MenuText}">Pass and Play</TextBlock>
                </Button>
            </Grid>
        </Grid>
</UserControl>
