<UserControl x:Class="WPF.DifficultySelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             >
    <Grid Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="55">
        <StackPanel Background="Transparent" Grid.Row="1" Orientation="Horizontal" >
            <Button Style="{StaticResource MenuButton}"  Click="OnEasy">
                <TextBlock Style="{StaticResource MenuText}">Beginner</TextBlock>
            </Button>
            <Button Style="{StaticResource MenuButton}" Click="OnMedium">
                <TextBlock Style="{StaticResource MenuText}">Advanced</TextBlock>
            </Button>
            <Button Style="{StaticResource MenuButton}" Click="OnHard">
                <TextBlock Style="{StaticResource MenuText}">Expert</TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
