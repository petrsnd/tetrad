<UserControl x:Class="WPF.PlayerInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid Margin="55">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="22"  >Player 1's Name:</TextBlock>
            <TextBox Grid.Row="1" Text="{Binding Player1}" Margin="0,15" ></TextBox>
            <TextBlock Grid.Row="2" FontSize="22">Player 2's Name:</TextBlock>
            <TextBox Grid.Row="3" Text="{Binding Player2}" Margin="0,15"></TextBox>
            <Button Grid.Row="4" Margin="0,15,0,0" Click="Button_Click">
                <TextBlock Margin="10">Start</TextBlock>
            </Button>
        </Grid>
    </Grid>
</UserControl>
