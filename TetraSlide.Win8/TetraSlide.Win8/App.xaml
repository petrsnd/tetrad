<Application
    x:Class="TetraSlide.Win8.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TetraSlide.Win8">

    <Application.Resources>
        <ResourceDictionary>
            <x:String x:Key="AppName">TetraSlide</x:String>
            <SolidColorBrush x:Key="TsBackgroundBrush" Color="#001A1ABB"  />
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Common/TsStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
