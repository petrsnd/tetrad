<Page
    x:Class="TetraSlide.Win8.BlankPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TetraSlide.Win8"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Version}" FontSize="32" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Margin="25" Grid.Row="1" HorizontalAlignment="Center" Name="Quit" Click="OnQuit">Quit Debugging</Button>
    </Grid>
</Page>
